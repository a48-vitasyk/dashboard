# Database Configuration
# Options: mock, supabase, postgres, mariadb
VITE_DB_TYPE=mock

# Supabase Configuration
VITE_SUPABASE_URL=YOUR_SUPABASE_URL
VITE_SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY

# PostgreSQL Configuration (if VITE_DB_TYPE=postgres)
# VITE_POSTGRES_HOST=localhost
# VITE_POSTGRES_PORT=5432
# VITE_POSTGRES_DB=panel
# VITE_POSTGRES_USER=
# VITE_POSTGRES_PASSWORD=

# MariaDB Configuration (if VITE_DB_TYPE=mariadb)
# VITE_MARIADB_HOST=localhost
# VITE_MARIADB_PORT=3306
# VITE_MARIADB_DB=panel
# VITE_MARIADB_USER=
# VITE_MARIADB_PASSWORD=

# SSO/OAuth Configuration
# Google OAuth
VITE_GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID
# Note: GOOGLE_CLIENT_SECRET should NEVER be exposed to client
# Use server-side proxy (Supabase Edge Functions or backend)

# Slack OAuth
VITE_SLACK_CLIENT_ID=YOUR_SLACK_CLIENT_ID
# Note: SLACK_CLIENT_SECRET should NEVER be exposed to client

# External API Integrations
# These keys should be used server-side only via proxy services
# TELEGRAM_BOT_TOKEN - use via Supabase Edge Function
# SLACK_BOT_TOKEN - use via Supabase Edge Function
# GOOGLE_SHEETS_API_KEY - use via server-side proxy

# Grafana Integration (for Analytics page)
# VITE_GRAFANA_URL=https://your-grafana-instance.com
# VITE_GRAFANA_API_KEY - use via server-side proxy

# Application Configuration
VITE_APP_NAME=Donezo
VITE_APP_URL=http://localhost:5173

# Feature Flags
VITE_ENABLE_SSO=false
VITE_ENABLE_REALTIME=true
